{
  "compilerOptions": {
    "target": "ESNext",
    "module": "None",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",

    "strict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "classic",

    "forceConsistentCasingInFileNames": true
  }
}
